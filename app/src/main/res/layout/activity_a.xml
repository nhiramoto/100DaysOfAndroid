<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityA">

    <CheckBox
            android:text="@string/checkOne"
            android:layout_width="match_parent"
            android:id="@+id/cbFirst"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            android:layout_height="wrap_content" android:layout_weight="1"/>
    <CheckBox
            android:text="@string/checkThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbThird"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbSecond"
            android:layout_weight="1"/>
    <CheckBox
            android:text="@string/checkFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbFour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbThird"
            android:layout_weight="1"/>
    <CheckBox
            android:text="@string/checkTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbSecond"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cbFirst" android:layout_weight="1"/>
    <TextView
            android:text="@string/selectedNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="177dp" android:layout_marginRight="177dp"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btDisplayValues" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/displayValues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btDisplayValues" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/cbFour"/>
</android.support.constraint.ConstraintLayout>